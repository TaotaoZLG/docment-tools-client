<Page x:Class="docment_tools_client.Views.DocumentGenerateView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mui="http://schemas.modernwpf.com/2019"
      xmlns:helpers="clr-namespace:docment_tools_client.Helpers"
      xmlns:local="clr-namespace:docment_tools_client.Views"
      mc:Ignorable="d"
      Title="DocumentGenerateView">

    <!-- 复用MainView的核心样式（也可移到App.xaml全局引用） -->
    <Page.Resources>
        <CornerRadius x:Key="ContainerCornerRadius">8</CornerRadius>
        <DropShadowEffect x:Key="ContainerShadow" Color="Black" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
        <Style x:Key="LogListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F0F2F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- 核心布局：移除冗余的Grid.Row/ColumnSpan（Page内无需继承Window的Grid） -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.4*"/>
        </Grid.ColumnDefinitions>

        <!-- 模块2：功能区 -->
        <Border Grid.Column="0" Margin="0,0,12,0" CornerRadius="{StaticResource ContainerCornerRadius}" 
                Background="#F8F9FA" BorderBrush="#E5E5E5" BorderThickness="1"
                Effect="{StaticResource ContainerShadow}">
            <Grid Margin="15">
                <!-- 滚动条仅在极端情况备用（默认不显示） -->
                <ScrollViewer VerticalScrollBarVisibility="Disabled" 
                              HorizontalScrollBarVisibility="Hidden"
                              Padding="0,0,8,0">
                    <StackPanel>
                        <!-- 1. 文书类型 -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <mui:SymbolIcon Symbol="Page" Margin="0,0,12,0" Foreground="#0078D7"/>
                                <TextBlock Text="1. 选择文书类型" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            <Separator Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding DocumentTypes}" 
                                      SelectedItem="{Binding SelectedDocumentType}"
                                      HorizontalAlignment="Stretch" Margin="30,0,0,0"/>
                        </StackPanel>

                        <!-- 2. 模板文件 -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <mui:SymbolIcon Symbol="OpenFile" Margin="0,0,12,0" Foreground="#0078D7"/>
                                <TextBlock Text="2. 模板文件" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            <Separator Margin="0,0,0,8"/>
                            <Grid Margin="30,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding TemplatePath}" IsReadOnly="True" Margin="0,0,12,0"/>
                                <Button Grid.Column="1" Content="浏览..." Command="{Binding SelectTemplateCommand}"
                                        Padding="12,6"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                                <Button Content="下载Word文书模版" Command="{Binding ExportWordTemplateCommand}"
                                        Background="Transparent" Foreground="#0078D7" BorderThickness="0"
                                        HorizontalAlignment="Left" Padding="0" Margin="0,0,8,0"/>
                                <TextBlock Text="（部分文书有多种模板）" Foreground="Gray" VerticalAlignment="Center" 
                                           Margin="5,0,0,0" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 3. 数据文件 -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <mui:SymbolIcon Symbol="Library" Margin="0,0,12,0" Foreground="#0078D7"/>
                                <TextBlock Text="3. 案件数据 (Excel)" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            <Separator Margin="0,0,0,8"/>
                            <Grid Margin="30,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding ExcelPath}" IsReadOnly="True" Margin="0,0,12,0"/>
                                <Button Grid.Column="1" Content="浏览..." Command="{Binding SelectExcelCommand}"
                                        Padding="12,6"/>
                            </Grid>
                            <Button Content="下载Excel数据模板" Command="{Binding ExportTemplateCommand}"
                                    Background="Transparent" Foreground="#0078D7" BorderThickness="0"
                                    HorizontalAlignment="Left" Margin="30,10,0,0" Padding="0"/>
                        </StackPanel>

                        <!-- 填充配置 + 生成格式 -->
                        <Grid Margin="30,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="填充人数/每份（留空默认全部）" Margin="0,0,0,6" 
                                           Foreground="Gray" FontSize="11"/>
                                <ComboBox IsEditable="True" IsTextSearchEnabled="False"
                                          ItemsSource="{Binding FillCountOptions}"
                                          Text="{Binding FillCountText, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,12,0">
                                <TextBlock Text="输出格式" Margin="0,0,0,6" Foreground="Gray" FontSize="11"/>
                                <ComboBox ItemsSource="{Binding GenerateFormats}" 
                                          SelectedItem="{Binding SelectedGenerateFormat}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Grid>

                        <!-- 文件名规则 -->
                        <StackPanel Margin="30,0,0,15">
                            <TextBlock Text="文件名规则（如：{案号}-{姓名}）" Margin="0,0,0,6" 
                                       Foreground="Gray" FontSize="11"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FileNameRule, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="1" Content="快捷选择" Command="{Binding QuickSelectCommand}" 
                                        Padding="10,5"/>
                            </Grid>
                        </StackPanel>

                        <!-- 输出目录 -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <mui:SymbolIcon Symbol="Folder" Margin="0,0,12,0" Foreground="#0078D7"/>
                                <TextBlock Text="4. 存储位置" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            <Separator Margin="0,0,0,8"/>
                            <Grid Margin="30,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding OutputDir}" IsReadOnly="True" Margin="0,0,12,0"/>
                                <Button Grid.Column="1" Content="选择目录..." Command="{Binding SelectOutputDirCommand}"
                                        Padding="12,6"/>
                            </Grid>
                        </StackPanel>

                        <!-- 核心操作 -->
                        <StackPanel Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <mui:SymbolIcon Symbol="Play" Margin="0,0,12,0" Foreground="#0078D7"/>
                                <TextBlock Text="5. 执行操作" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                            <Separator Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="生成预览" Command="{Binding PreviewCommand}" Width="120" 
                                        Margin="0,0,12,0" Padding="12,6"/>
                                <Button Content="开始生成" Command="{Binding StartGenerateCommand}" 
                                        Width="140" Background="#0078D7" Foreground="White" 
                                        Margin="12,0,0,0" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 模块3：日志区-->
        <Border Grid.Column="1" CornerRadius="{StaticResource ContainerCornerRadius}" 
                Background="#F8F9FA" BorderBrush="#E5E5E5" BorderThickness="1"
                Effect="{StaticResource ContainerShadow}">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,8" LastChildFill="False">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                        <mui:SymbolIcon Symbol="List" Margin="0,0,12,0" Foreground="#0078D7" VerticalAlignment="Center"/>
                        <TextBlock Text="实时日志" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Button Content="上传日志" Width="100" Margin="0,0,12,0" Padding="10,5"/>
                        <Button Content="清空" Width="65" Command="{Binding ClearLogCommand}" Padding="10,5"/>
                    </StackPanel>
                </DockPanel>

                <ListView Grid.Row="1" ItemsSource="{Binding LogList}" BorderThickness="0" Background="Transparent"
                          AlternationCount="2" ItemContainerStyle="{StaticResource LogListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" ToolTip="{Binding Content}"
                                       FontSize="11">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="{x:Static helpers:LogLevel.Error}">
                                                <Setter Property="Foreground" Value="#D13438"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="{x:Static helpers:LogLevel.Warn}">
                                                <Setter Property="Foreground" Value="#FF8C00"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="{x:Static helpers:LogLevel.Info}">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>