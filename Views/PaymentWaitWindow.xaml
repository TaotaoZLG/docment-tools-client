<Window x:Class="docment_tools_client.Views.PaymentWaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="正在支付" Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        mui:ThemeManager.IsThemeAware="True"
        Icon="/Resources/Images/icon.png">

    <Border BorderBrush="#E5E5E5" BorderThickness="1">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <mui:ProgressRing IsActive="True" Width="40" Height="40" Margin="0,0,0,20"/>
                <TextBlock Text="正在等待支付完成..." FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="请在浏览器中完成支付操作" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <Button Content="取消等待" Click="CancelButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>