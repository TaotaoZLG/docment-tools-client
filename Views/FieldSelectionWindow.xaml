<Window x:Class="docment_tools_client.Views.FieldSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Field Selection" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mui:ThemeManager.IsThemeAware="True"
        Icon="/Resources/Images/icon.png">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Please convert or select field:" Margin="0,0,0,10" FontWeight="Bold"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="HeadersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" 
                                Click="HeaderButton_Click"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Left"
                                Margin="0,0,0,5"
                                Background="Transparent"
                                BorderThickness="1"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>