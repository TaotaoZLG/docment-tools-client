<Window x:Class="docment_tools_client.Views.RechargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="在线充值" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mui:ThemeManager.IsThemeAware="True"
        Icon="/Resources/Images/icon.png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="请选择充值金额" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Preset Buttons -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,15">
            <RadioButton Content="50元" GroupName="AmountGroup" Checked="Amount_Checked" Tag="50" Margin="5"/>
            <RadioButton Content="100元" GroupName="AmountGroup" Checked="Amount_Checked" Tag="100" Margin="5" IsChecked="True"/>
            <RadioButton Content="200元" GroupName="AmountGroup" Checked="Amount_Checked" Tag="200" Margin="5"/>
            <RadioButton Content="500元" GroupName="AmountGroup" Checked="Amount_Checked" Tag="500" Margin="5"/>
            <RadioButton Content="1000元" GroupName="AmountGroup" Checked="Amount_Checked" Tag="1000" Margin="5"/>
            <RadioButton Content="其他" GroupName="AmountGroup" Checked="Amount_Checked" Tag="0" Margin="5"/>
        </UniformGrid>

        <!-- Custom Amount -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" x:Name="CustomAmountPanel" Visibility="Collapsed" Margin="0,0,0,15">
            <TextBlock Text="输入金额：" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="CustomAmountBox" Width="150" PreviewTextInput="NumberValidationTextBox"/>
            <TextBlock Text="元" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="取消" Click="CancelButton_Click" Margin="0,0,10,0"/>
            <Button Content="确定支付" Click="ConfirmButton_Click" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>